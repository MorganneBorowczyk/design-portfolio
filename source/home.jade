extend _layout.jade

block var
  - page = "Illustration & Design portfolio"
  - description = "Gloomy illustrations made in Lille, France. Merch for bands, CD covers, t-shirts, totebags..."
  - canonical = "https://morganneborowczyk.design/index.html"

block content
  h1 Illustrator & Designer from Lille, France
  .grid
    .grid-sizer
    .gutter-sizer
    
    +grid-item("Musée des Arts Décoratifs",
      "project-mad",
      "",
      "modal-project-mad",
      "MAD-2",
      "MAD-1",
      "MAD-3")
    +grid-item("Déjeuner sur l'Herbe",
      "dejeuner",
      "",
      "modal-dejeuner",
      "dejeuner-sur-lherbe")
    +grid-item("Toile de Jouy",
      "toile-de-jouy",
      "",
      "modal-toile-de-jouy",
      "toile-de-jouy")
    +grid-item("Jethro Morris",
      "jethro",
      "",
      "modal-jethro",
      "jethro-morris__mockup")
    +grid-item("Verminoise",
      "verminoise",
      "",
      "modal-verminoise",
      "verminoise__pochette-avant")
    +grid-item("Holispark",
      "holispark",
      "",
      "modal-holispark",
      "holispark__tshirt__cut-the-rope",
      "holispark__totebags")
    +grid-item("Balmonts",
      "balmonts",
      "",
      "modal-balmonts",
      "balmonts__mockup-front",
      "balmonts__mockup-back")
    +grid-item("Collaboration with Manchester (UK) artist Doomsnakes",
      "doomsnakes",
      "",
      "modal-doomsnakes",
      "collab__doomsnakes")
    +grid-item("Vampires from Space",
      "vampires",
      "",
      "modal-vampires",
      "vampires-from-space")
    +grid-item("Shadow of A",
      "shadow",
      "",
      "modal-shadow",
      "shadow-of-a")
    +grid-item("Cave",
      "cave",
      "",
      "modal-cave",
      "cave")
    +grid-item("One More Time with Feeling",
      "one-more-time",
      "",
      "modal-one-more-time",
      "one-more-time-with-feeling__an-act-of-revenge",
      "one-more-time-with-feeling__women-are-like-fucking-3d",
      "one-more-time-with-feeling__girl-in-amber")

  script(src="assets/js/masonry.pkgd.min.js")
  script(src="assets/js/imagesloaded.pkgd.min.js")

  script.
    //- Masonry
    $(document).ready(function(){var $grid = $('.grid');$grid.masonry({itemSelector: '.grid-item',columnWidth: '.grid-sizer',gutter: '.gutter-sizer',percentPosition: true,stagger: 30,transitionDuration: '0.3s'});$grid.imagesLoaded().progress( function() {$grid.masonry('layout');});});
  
  
  script.
    $('.grid-item').on('click', function(){var modalTarget = $(this).attr('data-modal');$('body').addClass('stuck').append(modalTarget);setTimeout(function(){$('.modal').addClass('visible');},50);});function closeModal() {$('.modal').removeClass('visible');setTimeout(function(){$('.modal').remove();},100);$('body').removeClass('stuck');}$('body').on('click', '.modal .close', function(){console.log('close');closeModal();});$('body').on('click', '.modal', function(event) {console.log('close');if(!$(event.target).closest('.modal-content').length && !$(event.target).is('.modal-content')) {closeModal();}});  
    
